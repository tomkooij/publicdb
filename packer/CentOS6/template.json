{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://ftp.tudelft.nl/centos.org/6/isos/x86_64/CentOS-6.8-x86_64-netinstall.iso",
      "iso_checksum": "22bd9300735ff092cc0c8cdd1bc8e9e600af124e",
      "iso_checksum_type": "sha1",

      "disk_size": 10240,

      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "echo '!Usr4hisp' | sudo -S shutdown -P now",

      "ssh_username": "hisparc",
      "ssh_password": "!Usr4hisp",
      "ssh_wait_timeout": "10000s"
    }
  ],
  "provisioners": [
    {
      "only": ["virtualbox-iso"],
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
    },
    {
      "only": ["virtualbox-iso"],
      "type": "shell",
      "inline": [
        "sudo yum -y install epel-release",
        "sudo yum -y install ansible"
      ]
    },
    {
      "only": ["virtualbox-iso"],
      "type": "shell",
      "scripts": [
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "only": ["virtualbox-iso"],
      "type": "vagrant"
    }
  ]
}
